{
  "extends": "./node_modules/gts/",
  "rules": {
    "prettier/prettier": "off",
    "node/no-unpublished-import": "off",
    "prefer-template": "error",
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
